{
    "name": "roave/security-advisories-builder",
    "type": "project",
    "description": "Build tool for roave/roave-security-advisories",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Pivetta",
            "role": "maintainer",
            "email": "ocramius@gmail.com"
        }
    ],
    "require": {
        "php":          "^7.1",
        "symfony/yaml": "^3.0",
        "composer/semver": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "infection/infection": "^0.11.5"
    },
    "autoload": {
        "psr-0": {
            "Roave\\SecurityAdvisories\\": "src"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "RoaveTest\\SecurityAdvisories\\": "test"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "which git",
            "which bash",
            "which curl",
            "which cp"
        ]
    }
}

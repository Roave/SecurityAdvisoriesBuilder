{
    "name": "roave/security-advisories-builder",
    "type": "project",
    "description": "Build tool for roave/roave-security-advisories",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Pivetta",
            "role": "maintainer",
            "email": "ocramius@gmail.com"
        },
        {
            "name": "Ilya Tribusean",
            "role": "maintainer",
            "email": "slash3b@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "nyholm/psr7": "^1.3",
        "php-http/curl-client": "^2.1",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "symfony/yaml": "^5.1",
        "thecodingmachine/safe": "^0.1.16",
        "webmozart/assert": "^1.9.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^7.0.2",
        "infection/infection": "^0.15.1",
        "maglnet/composer-require-checker": "^2.1",
        "phpunit/phpunit": "^8.5.8",
        "roave/no-leaks": "^1.1",
        "squizlabs/php_codesniffer": "^3.5.4",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-0": {
            "Roave\\SecurityAdvisories\\": "src"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "RoaveTest\\SecurityAdvisories\\": "test"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "which git",
            "which bash",
            "which curl",
            "which cp"
        ]
    }
}

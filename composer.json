{
    "name": "roave/security-advisories-builder",
    "type": "project",
    "description": "Build tool for roave/roave-security-advisories",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Pivetta",
            "role": "maintainer",
            "email": "ocramius@gmail.com"
        },
        {
            "name": "Ilya Tribusean",
            "role": "maintainer",
            "email": "slash3b@gmail.com"
        }
    ],
    "require": {
        "php": "~8.2.0",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-pcre": "*",
        "azjezz/psl": "^2.3.0",
        "composer/composer": "^2.4.4",
        "nyholm/psr7": "^1.5.1",
        "ocramius/package-versions": "^2.7.0",
        "php-http/curl-client": "^2.2.1",
        "psr/http-client": "^1.0.1",
        "psr/http-message": "^1.0.1",
        "symfony/yaml": "^6.2.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^11.0.0",
        "php-standard-library/psalm-plugin": "^2.2.1",
        "phpunit/phpunit": "^9.5.27",
        "psalm/plugin-phpunit": "^0.18.4",
        "roave/infection-static-analysis-plugin": "^1.26.0",
        "roave/no-leaks": "^1.4.0",
        "squizlabs/php_codesniffer": "^3.7.1",
        "vimeo/psalm": "^5.2.0"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*"
    },
    "autoload": {
        "psr-0": {
            "Roave\\SecurityAdvisories\\": "src"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "RoaveTest\\SecurityAdvisories\\": "test"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": false
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "which git",
            "which bash",
            "which curl",
            "which cp"
        ]
    }
}
